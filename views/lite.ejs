                var element1 = document.createElement("input");
                element1.className = "span2";
                element1.type = "date";
                element1.name = "utility_startdate";

                cell1.appendChild(element1);

                var cell2 = row.insertCell(1);
                var element2 = document.createElement("input");
                element2.type = "number";
                element2.placeholder = "kWh";
                element2.className = "span2";
                element2.name = "utility_electric"
                cell2.appendChild(element2);

                var cell3 = row.insertCell(2);
                var element3 = document.createElement("input");
                element3.type = "number";
                element3.placeholder = "CCF";
                element3.className = "span2";
                element3.name = "utility_gas";
                cell3.appendChild(element3);
            }

            function deleteRow(tableID) {
                var table = document.getElementById(tableID);
                var rowCount = table.rows.length;
                table.deleteRow(rowCount - 1);
            }
